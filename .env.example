# AI Employee System - Environment Variables Template
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# ============================================
# Gmail API Credentials
# ============================================
# Get these from: https://console.cloud.google.com/
GMAIL_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_REFRESH_TOKEN=your_refresh_token_here

# ============================================
# WhatsApp (for Silver Tier)
# ============================================
# Path to store WhatsApp Web session
WHATSAPP_SESSION_PATH=./config/whatsapp_session

# ============================================
# LinkedIn API (for Silver Tier)
# ============================================
# Get these from: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# ============================================
# Odoo Integration (for Gold Tier)
# ============================================
ODOO_URL=http://localhost:8069
ODOO_DB=your_database_name
ODOO_USERNAME=admin
ODOO_PASSWORD=your_odoo_password

# ============================================
# Facebook API (for Gold Tier)
# ============================================
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_PAGE_ID=your_page_id

# ============================================
# Instagram API (for Gold Tier)
# ============================================
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_ACCOUNT_ID=your_account_id

# ============================================
# Twitter/X API (for Gold Tier)
# ============================================
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# ============================================
# System Configuration
# ============================================
# Vault path (Obsidian directory)
VAULT_PATH=.

# Dry run mode (set to 'false' to enable real actions)
DRY_RUN=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================
# Security Settings
# ============================================
# Maximum actions per hour (rate limiting)
MAX_EMAILS_PER_HOUR=10
MAX_PAYMENTS_PER_HOUR=3
MAX_SOCIAL_POSTS_PER_HOUR=5
